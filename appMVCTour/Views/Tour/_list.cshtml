@model IEnumerable<appMVCTour.Models.tour>

@{
    ViewBag.Title = "_list";
}

<h2>_list</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precioNinos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precioAdultos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.restricciones)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precioNinos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precioAdultos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.restricciones)
        </td>
    </tr>
}

</table>
